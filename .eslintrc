{
    "env": {
      "mocha": true,
      "es6": true
    },
    "globals": {
      "expect": true,
      "sinon": true
    },
    "plugins": ["html", "json", "promise"],
    "extends": "elemefe",
    "rules": { 
      "no-restricted-globals": ["error", "event", "fdescribe"]
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      }
    }
}